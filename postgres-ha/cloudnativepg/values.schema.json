{
  "$schema": "https://json-schema.org/draft-07/schema#",
  "type": "object",
  "additionalProperties": true,
  "properties": {
    "namespace": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "create": {
          "type": "boolean"
        },
        "name": {
          "type": "string",
          "minLength": 1
        }
      }
    },
    "cluster": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "name": {
          "type": "string",
          "minLength": 1
        },
        "namespace": {
          "type": "string",
          "minLength": 1
        },
        "instances": {
          "type": "integer",
          "minimum": 1
        },
        "primaryUpdateStrategy": {
          "type": "string",
          "minLength": 1
        },
        "resources": {
          "type": "object"
        },
        "storage": {
          "type": "object",
          "properties": {
            "size": {
              "type": "string",
              "minLength": 1
            }
          }
        },
        "bootstrap": {
          "type": "object",
          "properties": {
            "initdb": {
              "type": "object",
              "properties": {
                "database": {
                  "type": "string",
                  "minLength": 1
                },
                "owner": {
                  "type": "string",
                  "minLength": 1
                }
              }
            }
          }
        }
      }
    },
    "observability": {
      "type": "object",
      "additionalProperties": true,
      "properties": {
        "enabled": {
          "type": "boolean"
        },
        "namespace": {
          "type": "string",
          "minLength": 1
        },
        "releaseLabel": {
          "type": "string",
          "minLength": 1
        },
        "operatorNamespace": {
          "type": "string",
          "minLength": 1
        },
        "clusterSelector": {
          "type": "object",
          "properties": {
            "labelKey": {
              "type": "string",
              "minLength": 1
            },
            "labelValue": {
              "type": "string",
              "minLength": 1
            }
          }
        }
      }
    }
  }
}
